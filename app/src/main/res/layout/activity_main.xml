<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ButtonRegister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mini.com.baristaanalytics.MainActivity">
    <Button
    android:id="@+id/btn"
    android:onClick="showMeMaps"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:text="Show me maps" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="63dp"
        android:text="Go To Okoa Details"
        android:onClick="goToOkoaDetails"/>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:onClick="registerClickFunction"
        android:text="Register" />

    <Button
        android:onClick="signInFunction"
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="197dp"
        android:text="Already Have An Account? Sign In" />

    <Button
        android:onClick="registerVendor"
        android:id="@+id/registerVendorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="114dp"
        android:text="Register Vendor" />

    <Button
        android:id="@+id/SpeechAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn"
        android:layout_marginTop="61dp"
        android:onClick="SpeechToTxt"
        android:text="SpeechAPI" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ViewImages"
        android:text="View Images"/>

</RelativeLayout>
