<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:background="@drawable/coffeee_beans"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="153dp"
        android:layout_height="153dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:src="@drawable/coffee_avatar"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        />

    <Button
        android:id="@+id/barista_button_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/regular_button"
        android:onClick="goToBarista"
        android:text="Barista"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/customer_button_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="168dp"
        android:backgroundTint="@color/regular_button"
        android:onClick="goToCustomer"
        android:text="Customer" />

    <TextView
        android:id="@+id/textView_Saying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Choose Your Path"
        android:textColor="@color/white"
        android:textSize="24sp" />


</RelativeLayout>
