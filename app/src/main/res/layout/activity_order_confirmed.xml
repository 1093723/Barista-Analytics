<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Okoa.OrderConfirmed">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relLayouttxtViewHolder"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="85">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Confirmed"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barista's on it"
                android:textColor="?attr/colorPrimaryDark"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textView2"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="15">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/a256x256"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/img_order_confirmed"/>
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Success!"
                android:textColor="?attr/colorPrimary"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_order_confirmed"
                android:layout_marginTop="25dp"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>